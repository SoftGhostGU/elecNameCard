<view class="container">
  <!-- #90bbfc -->
  <View class="namecard">
    <!-- <View class="decoration-bar"></View> -->

    <View class="basic-info">
      <View class="title">
        
        <View class="titleName">
          <View class="name">{{ name }}</View>
        </View>
        <View class="occupation">{{ occupation }}</View>
        <View class="company-logo">
          <image src="{{logo}}" class="logo"></image>
        </View>
      </View>

      <View class="other-info">
        <View class="company">{{ company }}</View>
      </View>
    </View>

    <View class="phone-info">
      <View class="contact-item">
        <image src="/assets/icons/phone-icon.png" class="contact-icon"></image>
        <View class="tele">{{ tele }}</View>
      </View>
      <View class="contact-item">
        <image src="/assets/icons/email-icon.png" class="contact-icon"></image>
        <View class="email">{{ email }}</View>
      </View>
      <View class="contact-item">
        <image src="/assets/icons/address-icon.png" class="contact-icon"></image>
        <View class="address">{{ address }}</View>
      </View>
      <View class="contact-item">
        <image src="/assets/icons/web-icon.png" class="contact-icon"></image>
        <View class="https">{{ https }}</View>
      </View>
    </View>
  </View>

  <View class="share-button">
    <button class="share">分享名片</button>
    <button class="save">存入通讯录</button>
  </View>

